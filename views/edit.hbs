{{!-- layout for updating employee details --}}
<h1>Update Employee</h1>
<a class="btn btn-primary" href="/">All Employees</a>
<form action="/update/{{user.id}}" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Name</label>
    <input type="text" name="name" value="{{user.name}}" class="form-control"
  </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Role</label>
    <input type="text" name="role" value="{{user.role}} "class="form-control"
  </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Preferred Language</label>
    <input type="text" name="language" value="{{user.language}} "class="form-control"
  </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Favourite Framework</label>
    <input type="text" name="framework" value="{{user.framework}}" class="form-control"
  </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Long Term Goal</label>
    <input type="text" name="goal" value="{{user.goal}}" class="form-control"
  </div>
 
  <button type="submit" class="btn btn-primary">Update Employee</button>
</form>
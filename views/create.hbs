{{!-- layout for creating employee profiles --}}
<h1>Create Employee</h1>
<a class="btn btn-primary" href="/">All Employees</a>
<form action="/create" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Name</label>
    <input type="text" name="name" class="form-control"
  </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Role</label>
    <input type="text" name="role" class="form-control"
  </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Preferred Language</label>
    <input type="text" name="language" class="form-control"
  </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Favourite Framework</label>
    <input type="text" name="framework" class="form-control"
  </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Long Term Goal</label>
    <input type="text" name="goal" class="form-control"
  </div>
 
  <button type="submit" class="btn btn-primary mt-1">Create Employee</button>
</form>